{% extends "front/layout.twig" %}

{% block content %}

    <div class="block block-secondary">

        <div class="container">

            <div class="row app-align-center">

                <div class="col-lg-8 col-lg-offset-2">

                    <div class="messages">
                        {% include('front/sections/flash_message.twig') %}

                        {% for error in flash.errors.captcha %}
                            <div class="alert alert-danger">
                                {{ error }}
                            </div>
                        {% endfor %}
                    </div>

                    <form id="contact-form" method="post" action="{{ path_for('contact') }}" role="form">

                        <div class="controls">

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group {% if flash.errors.name %} has-error {% endif %}">
                                        <label for="form_name"><strong>Nume *</strong></label>
                                        <input id="form_name" type="text" name="name" class="form-control" required="required" value="{{ old.name }}">
                                        {% for error in flash.errors.name %}
                                            <span class="help-block">{{ error }}</span>
                                        {% endfor %}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group {% if flash.errors.surname %} has-error {% endif %}">
                                        <label for="form_lastname"><strong>Prenume *</strong></label>
                                        <input id="form_lastname" type="text" name="surname" class="form-control" required="required" value="{{ old.surname }}">
                                        {% for error in flash.errors.surname %}
                                            <span class="help-block">{{ error }}</span>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group {% if flash.errors.email %} has-error {% endif %}">
                                        <label for="form_email"><strong>Email *</strong></label>
                                        <input id="form_email" type="email" name="email" class="form-control" required="required" value="{{ old.email }}">
                                        {% for error in flash.errors.email %}
                                            <span class="help-block">{{ error }}</span>
                                        {% endfor %}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group {% if flash.errors.phone %} has-error {% endif %}">
                                        <label for="form_phone"><strong>Numar de Contact *</strong></label>
                                        <input id="form_phone" type="text" name="phone" required="required" class="form-control" value="{{ old.phone }}">
                                        {% for error in flash.errors.phone %}
                                            <span class="help-block">{{ error }}</span>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group {% if flash.errors.message %} has-error {% endif %}">
                                        <label for="form_message"><strong>Introduceti mesajul in campul de mai jos *</strong></label>
                                        <textarea id="form_message" name="message" class="form-control" rows="4" required="required" >{{ old.message }}</textarea>
                                        {% for error in flash.errors.message %}
                                            <span class="help-block">{{ error }}</span>
                                        {% endfor %}
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div class="form-group">
                                        <!-- Replace data-sitekey with your own one, generated at https://www.google.com/recaptcha/admin -->
                                        <div class="g-recaptcha" data-sitekey="6LccdzQUAAAAALgzVBOaEMRqazHY1e_T-fqd861j"></div>
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <input type="submit" class="btn btn-sm btn-pill btn-primary" value="Send message">
                                    <a href="{{ path_for('index') }}" class="btn btn-md btn-pill btn-default"><span class="icon icon-reply"> Back</span></a>
                                </div>
                            </div>

                        </div>

                    </form>

                </div><!-- /.8 -->

            </div> <!-- /.row-->

        </div> <!-- /.container-->
    </div>

{% endblock %}
